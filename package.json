{
  "name": "@rgbk/v3-contracts",
  "version": "2.0.7",
  "description": "Ethereum asset management",
  "homepage": "https://github.com/rigoblock/v3-contracts/",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "contracts",
    "dist",
    "src",
    "test",
    "build",
    "out"
  ],
  "scripts": {
    "build": "forge compile",
    "build:hardhat": "hardhat compile",
    "build:foundry:ir": "forge compile --via-ir",
    "build:ts": "yarn rimraf dist && tsc",
    "test": "hardhat test --deploy-fixture",
    "test:foundry": "forge test",
    "coverage": "yarn coverage:combined",
    "coverage:setup": "chmod +x ./scripts/setup-lcov.sh && scripts/setup-lcov.sh",
    "coverage:hardhat": "hardhat coverage 2>&1 | grep -v '|' | grep -v '═' | grep -v '─' | grep -v 'File' | grep -v '% Stmts' | grep -v 'All files' || true",
    "coverage:foundry": "rm -f lcov.info && forge coverage --no-match-coverage \"mocks/|examples/|test/|tokens/|utils/\" --report lcov && mv lcov.info coverage/foundry_lcov.info",
    "coverage:merge": "lcov --add-tracefile coverage/lcov.info --add-tracefile coverage/foundry_lcov.info --output-file coverage/combined_lcov.info --ignore-errors format,corrupt && sed -i 's|/home/[^/]*/v3-contracts/||g' coverage/combined_lcov.info",
    "coverage:combined": "yarn coverage:setup && yarn coverage:hardhat && yarn coverage:foundry && yarn coverage:merge && chmod +x ./scripts/display-coverage.sh && ./scripts/display-coverage.sh",
    "coverage:combined:summary": "yarn coverage:setup && yarn coverage:hardhat && yarn coverage:foundry && yarn coverage:merge && yarn coverage:summary",
    "coverage:summary": "genhtml -o coverage/html coverage/combined_lcov.info",
    "benchmark": "yarn test benchmark/*.ts",
    "deploy-custom": "rm -rf deployments/custom && yarn deploy-all custom",
    "deploy-all": "hardhat deploy-contracts --network",
    "deploy": "hardhat deploy --network",
    "lint": "yarn lint:sol && yarn lint:ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint --max-warnings 0 .",
    "fmt:sol": "prettier 'contracts/**/*.sol' -w",
    "prepack": "yarn build",
    "prepare": "chmod +x ./.husky/pre-commit && husky install",
    "prepublish": "yarn rimraf build:hardhat && yarn build:hardhat && yarn build:ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rigoblock/v3-contracts.git"
  },
  "keywords": [
    "Ethereum",
    "Wallet",
    "Rigoblock"
  ],
  "author": "gab@rigoblock.com",
  "bugs": {
    "url": "https://github.com/rigoblock/v3-contracts/issues"
  },
  "devDependencies": {
    "@gnosis.pm/mock-contract": "^4.0.0",
    "@nomicfoundation/hardhat-foundry": "^1.1.3",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@safe-global/safe-singleton-factory": "^2.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^10.0.1",
    "@types/node": "^25.0.0",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "argv": "^0.0.3",
    "chai": "^4.2.0",
    "debug": "^4.2.0",
    "dotenv": "^17.0.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.4",
    "hardhat": "^2.13.1",
    "hardhat-deploy": "1.0.4",
    "husky": "^9.0.10",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.4.2",
    "solc": "0.8.31",
    "solhint": "^5.0.5",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.8.1",
    "typescript": "^5.0.4",
    "yargs": "^18.0.0"
  },
  "peerDependencies": {
    "ethers": "^5.1.4"
  },
  "dependencies": {}
}
